{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
			"stopOnEntry": false,
			"args": [
				"-i",
				"--no-cache",
				"--config",
				"jest.json"
			],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "pretest",
			"env": {
				"NODE_ENV": "debug",
			},
			"runtimeArgs": [
				"--nolazy"
			],
			"sourceMaps": true,
		}
	]
}