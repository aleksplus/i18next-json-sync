{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "test",
			"args": ["test"],
			"isTestCommand": true
		},
		{
			"taskName": "pretest",
			"args": ["run", "pretest"]
		},
		{
			"taskName": "build",
			"args": ["run", "build"],
			"problemMatcher": "$tsc",
			"isBuildCommand": true
		}
	]
}